#!/bin/bash
# Wrapper to run backend TypeScript updater with controlled sudo access.
# Install location suggestion: /usr/local/bin/padmin-updater (owned by root, mode 750)

COMMAND="$1"
case "$COMMAND" in
  start)
    /usr/bin/env node /opt/previous-admin/backend/updater/dist/index.js --start
    ;;
  status)
    /usr/bin/env node /opt/previous-admin/backend/updater/dist/index.js --status
    ;;
  *)
    echo "Usage: $0 {start|status}"
    exit 2
    ;;
esac
